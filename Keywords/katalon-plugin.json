{
	"name":"Katalon Report",
	"listeners": ["KatalonReportListener"],
	"report": {
		"exportProviderClassName":"com.kms.katalon.core.reporting.plugin.KatalonExportReportProvider"
	},
	"configuration": {
		"settingId": "com.katalon.plugin.report",
		"settingPage": {
			"name": "Report",
			"components": [
				{
					"key": "lblGenerateReport",
					"type": "label",
					"label": "Automatically generate these reports after test execution:"
				},
				{
					"key": "generateHTML",
					"type": "checkbox",
					"label": "HTML",
					"defaultValue": "true"
				},
				{
					"key": "generateCSV",
					"type": "checkbox",
					"label": "CSV",
					"defaultValue": "true"
				},
				{
					"key": "generatePDF",
					"type": "checkbox",
					"label": "PDF",
					"defaultValue": "false"
				},
				{
					"key": "lblHTMLFileStructure",
					"type": "label",
					"label": "HTML report file structure:"
				},
				{
					"key": "useHTMLImageReferences",
					"type": "checkbox",
					"label": "Attach reference images using linked screenshots (not embedded) to reduce report file size",
					"link": "https://docs.katalon.com/katalon-studio/test-reports/view-test-reports/view-test-suite-and-test-suite-collection-reports-in-katalon-studio#automatically-generate-reports",
					"defaultValue": "false"
				}
			]
		}
	}
}